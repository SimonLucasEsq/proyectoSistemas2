				    <tr>
				      <td><%= a.descripcion %></td>
				      <td><%= a.fecha_subida %></td>
				      <td>
				      	<%= link_to "" , a.file.url, class: 'btn btn-primary fa fa-arrow-down' %>
				      	<%= link_to "", a, class: 'fa fa-close btn btn-danger' , method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
				      </td>
				    </tr>
				    <% end %>
				  </tbody>
				</table>
			</section>
		</section>
