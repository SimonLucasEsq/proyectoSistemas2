<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <%= form_with(model: extension, local: true) do |form| %>
  <% if extension.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(extension.errors.count, "error") %> prohibited this extension from being saved:</h2>
      <ul>
        <% extension.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <section class="main row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <div class="form-group">
      <%= form.label "Nombre" %>
      <%= form.text_field :name, id: :extension_name, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= form.label "Descripcion" %>
      <%= form.text_field :description, id: :extension_description, class: 'form-control' %>
      </div>

      <!-- Formulario para encargado del proyecto -->
      <div class="form-group">
        <%= form.label "Encargado" %>
        <br/>
        <%= form.select :manager_id, options_for_select(Manager.all.map{|c| [c.name, c.id]}, :extension_manager_id), class: 'custom-select' 'form-control' %>
        <%= link_to new_manager_path do%>
        <button type="button" class="btn btn-box-tool" data-widget="collapse">
          <i class="fa fa-plus"></i>
        </button>
        <%end%>
             
      </div>
    </div>

    <!-- Columna para otros formularios -->
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label "Fecha inicio" %><br/>
        <%= form.date_select :date_start, id: :extension_date_start %>
      </div>

      <div class="form-group">
        <%= form.label "Fecha fin " %><br/>
        <%= form.date_select :date_end, id: :extension_date_end %>
      </div>

      <div class="form-group">
        <%= form.label "Estado" %><br/>
        <%= form.select :state_id, options_for_select(State.all.map{|c| [c.name, c.id]}, :extension_state_id), class: 'custom-select' %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </section>
  <section class="main row">
    <div class="col-md-2"></div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="actions">
        <%= link_to 'Volver', extensions_path, class: 'btn btn-default'%>
        <%= form.submit "Guardar", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </section>

</body>
</html>

