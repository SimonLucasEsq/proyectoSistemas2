<%= form_for @extension, url: {action: "update"}, html: {id: "form", autocomplete: "off" } do |form| %>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">

<form class="form-horizontal" name="commentform" method="post">        
  <section class="main row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <div class="form-group">
      <%= form.label "Nombre" %>

      <%= form.text_field :name, id: :extension_name, class: 'form-control input' %>

      </div>

      <div class="form-group">
      <%= form.label "Descripcion" %>

      <%= form.text_field :description, id: :extension_description, class: 'form-control input' %>

      </div>

      <!-- Formulario para encargado del proyecto -->
      <div class="form-group">
        <%= form.label "Encargado" %>
        <br/>
        <%= form.select :manager_id, options_for_select(Manager.all.map{|c| [c.name, c.id]}, @extension.manager_id), class: 'custom-select' 'form-control' %>
      </div>
    <div class="form-group">
        <%= form.label "Tipo de Extension" %><br/>
        <%= form.select :extension_type_id, options_for_select(ExtensionType.all.map{|c| [c.name, c.id]}, @extension.extension_type_id), {}, {class: 'form-control',:style => "width:100%;"}%>
      </div>
    </div>

    <!-- Columna para otros formularios -->
    <div class="col-md-4">

      <div class="form-group">
      <%= form.label "Fecha Inicio" %>
      <div class="input-group date date-j">
          <%= form.text_field :date_start, id: :extension_date_start, class: 'form-control' %>  
          <div class="input-group-addon">
            <span class="fa fa-calendar"></span>
          </div>
      </div>
      </div>

      <div class="form-group">
      <%= form.label "Fecha Fin" %>
      <div class="input-group date date-j" >
          <%= form.text_field :date_end, id: :extension_date_end, class: 'form-control' %>  
          <div class="input-group-addon">
            <span class="fa fa-calendar"></span>
          </div>
      </div>
      </div>

      <br/>
      <div class="form-group">
        <%= form.label "Estado" %><br/>
        <%= form.select :state_id, options_for_select(State.all.map{|c| [c.name, c.id]}, @extension.state_id), class: 'custom-select' %>
      </div>
      <div class="form-group">
        <%= form.label "Carrera" %><br/>
        <%= form.select :career_id, options_for_select(Career.all.map{|c| [c.name, c.id]}, @extension.career_id), class: 'custom-select' %>
      </div>      

      <div style="display: none">
        <%= form.text_field :extension_type_id, id: :extension_extension_type_id %>
      </div>

    </div>
    <div class="col-md-2"></div>
  </section>
  <section class="main row">
    <div class="col-md-2"></div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
      
    </div>
    <div class="col-md-2"></div>
  </section>
  


      </div>
      <div class="modal-footer">

        <%= form.submit "Editar",class: "btn btn-primary", id: "submit"%>

        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>

<%end%>

<script>
  
$('.date-j').datepicker({ 
      format: "yyyy/mm/dd",
      language: "es"
  });
  
$(document).ready(function() {
    $(".input").keyup(function() {
        var form = $(this).parents("#form");
        var check = checkCampos(form);
        if(check) {
            $('#submit').attr('disabled', false);
        }
        else {
            $('#submit').attr('disabled', true);
        }
    });
});
function checkCampos(obj) {
    var camposRellenados = true;
    obj.find(".input").each(function() {
    var $this = $(this);
            if( $this.val().length <= 0 ) {
                camposRellenados = false;
                return false;
            }
    });
    if(camposRellenados == false) {
        return false;
    }
    else {
        return true;
    }
}
</script>
