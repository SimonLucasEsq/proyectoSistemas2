
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  	<div class="modal-dialog">
  		<%= form_for @manager, :remote=>true do |form| %>
	    
	    <div class="modal-content">
	      	<div class="modal-header">
	      		<button type="button" class="close" data-dismiss="modal">&times;</button>
	        	<h5 class="modal-title" style="text-align: center;">Nuevo Encargado</h5>
	      	</div>
	      	<div class="modal-body">
	      		<section class="main row">
			        <div class="col-md-6">
					    <div class="form-group">
						    <%= form.label "Nombre" %>
						    <%= form.text_field :name, id: :manager_name, class: 'form-control' %>
					    </div>

					    <div class="form-group">
						    <%= form.label :email %>
						    <%= form.text_field :email, id: :manager_email, class: 'form-control' %>
					    </div>
					</div>
				    <div class="col-md-6">
					    <div class="form-group">
						    <%= form.label "TelÃ©fono" %>
						    <%= form.text_field :phone, id: :manager_phone, class: 'form-control' %>
					    </div>
					</div>
				</section>
	      	</div>
	        <div class="modal-footer">
			    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
		    	<%= form.submit "Agregar encargado", class: 'btn btn-primary' %>
		    </div>
	    </div>
      <% end %>
    </div>
</div>