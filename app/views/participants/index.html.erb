<p id="notice"><%= notice %></p>

<h1>Participants</h1>

<table>
  <thead>
    <tr>
      <th>Hours</th>
      <th>Student</th>
      <th>Extension</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.hours %></td>
        <td><%= participant.student %></td>
        <td><%= participant.extension %></td>
        <td><%= link_to , participant, class: 'btn btn-default fa fa-eye' %></td>
        <td><%= link_to , edit_participant_path(participant), class: 'btn btn-default fas fa-pencil-alt' %></td>
        <td><%= link_to , participant, class: 'btn btn-default fas fa-trash-alt', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

