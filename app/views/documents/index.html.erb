<p id="notice"><%= notice %></p>

<h1>Documentos</h1>

<table class="table table-responsive table-bordered">
    <tr>
      <th style="width: 150px">Nombre</th>
      <th style="width: 150px">Extension</th>
      <th colspan="3"></th>
    </tr>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.extension_name %></td>
        <td><%= link_to 'download', document.doc.url %>
        <%= link_to '', document,class: 'btn btn-default fa fa-eye' %>
        <%= link_to '', edit_document_path(document) ,class: 'btn btn-info fas fa-pencil-alt'%>
        <%= link_to '', document, class: 'btn btn-danger fas fa-trash-alt', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Documento', new_document_path , class: 'btn  btn-primary'%>
            
 