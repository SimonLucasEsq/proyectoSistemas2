<%= form_with(model: photo, local: true) do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-3"></div>

<div class="col-md-6">



  <div class="form-group">
    <%= form.label "nombre" %>
    <%= form.text_field :name, id: :photo_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "descripcion" %>
    <%= form.text_area :description, id: :photo_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "extencion" %>
     <%= form.select :extension_id, options_for_select(Extension.all.map{|c| [c.name, c.id]}, :extension_id), class: 'custom-select' 'form-control' %>

  </div>

  <div class="field">
    <%= form.label "Foto" %>
    <%= form.file_field :img %>
  </div>

<br>
  <div class="actions">
    <ul class="pull-right">
    <%= link_to 'Volver', states_path, class: 'btn btn-default'%>
    <%= form.submit "Agregar Foto",class: 'btn btn-primary'%>
  </div>

  </ul>

</div>

<div class="col-md-3"></div>
<% end %>



