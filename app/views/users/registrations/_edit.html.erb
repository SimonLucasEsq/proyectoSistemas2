 <!-- Modal -->
  <div id="miModal" class="modal fade" role="dialog">
     <div class="modal-dialog">
    <!-- Modal content-->
          <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Editar Perfil</h4>
              </div>
              <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "form-horizontal center", method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
              <%= f.label :email, "Correo Electronico:", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.email_field :email, autofocus: true,class: "form-control" %>
              </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>



        <div class="form-group">
              <%= f.label :password, "Nueva contraseña:", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.password_field :password, autofocus: "off",class: "form-control" %>
              </div>
        </div>


        <div class="form-group">
              <%= f.label :password_confirmation, "Confirmar contraseña:", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.password_field :password_confirmation, autofocus: "off",class: "form-control" %>
              </div>
        </div>

        <div class="form-group">
              <%= f.label :current_password,"contraseña actual", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                <br/>
                <%= f.submit "Actualizar",class: "btn btn-primary"%>
              </div>
     
        </div>
     <% end %>
   </div>
    <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    </div>
    </div>

    </div>
    </div>
