<%=form_for @user, url:{action: "update"} do |f|%>
  <div class="field">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "Apellido" %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label "Contraseña" %> <i>(Deja en blanco si no deseas cambiar tu contraseña)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres como mínimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Confirmacion de contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>


  <div class="field">
  <%= select_tag :role, options_from_collection_for_select(Role.all,"name","name") %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>